{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "event_name": {"type": "string", "maxLength": 100},
    "delivery_id": {"type": "string", "maxLength": 200},
    "org_login": {"type": "string", "maxLength": 100},
    "repo_id": {"type": "integer"},
    "event_id": {"type": "string", "maxLength": 200},
    "job_type": {"type": "string", "enum": ["create", "polling", "sync"]},
    "repo_full_name": {
      "type": "string",
      "pattern": "^[A-Za-z0-9_.-]+/[A-Za-z0-9_.-]+$",
      "maxLength": 300
    },
    "action": {"type": ["string", "null"], "maxLength": 100},
    "ref": {"type": ["string", "null"], "maxLength": 300},
    "after": {"type": ["string", "null"], "maxLength": 100},
    "repo_default_branch": {"type": "string", "minLength": 1, "maxLength": 200},
    "repo_is_fork": {"type": "boolean"},
    "repo_parent_full_name": {
      "type": ["string", "null"],
      "pattern": "^[A-Za-z0-9_.-]+/[A-Za-z0-9_.-]+$",
      "maxLength": 300
    },
    "repo_parent_default_branch": {"type": ["string", "null"], "minLength": 1, "maxLength": 200},
    "source_repo_full_name": {
      "type": ["string", "null"],
      "pattern": "^[A-Za-z0-9_.-]+/[A-Za-z0-9_.-]+$",
      "maxLength": 300
    }
  },
  "required": ["event_name", "delivery_id", "org_login", "repo_id", "repo_full_name", "job_type", "action", "ref", "after", "source_repo_full_name"],
  "additionalProperties": false
}
